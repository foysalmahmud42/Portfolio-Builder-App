<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#7B16D3</item>
        <item name="colorPrimaryDark">#7B41D6</item>
        <item name="colorAccent">#DFBD16</item>
    </style>

    <style name="AppTheme.DarkActionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#7B11BC</item>
        <item name="colorPrimaryDark">#B30E85</item>
        <item name="colorAccent">#6A088E</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BoldTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadLineTextView" parent="BoldTextView">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
